<div class='container'>
<h1>Create An-Otter Survey!</h1>
<form id='survey-builder' action="/surveys" method="post">
  Survey Title: <input class='survey-title' name="survey[title]" placeholder="One Bad Mutha-Otter Survey">
  <ol>
    <!-- populated by survey_builder.js -->
  </ol>
  <button class='button add-question'>Add question</button>
  <div class='bottom-border'></div>
  <input class='button' id='create-survey' type='submit' value='Create My Survey! >>'/>
</form>
</div>


<% content_for :script do %>
  <script src="/js/survey_builder.js"></script>
<% end %>

<% content_for :style do %>
  <link rel="stylesheet" href="/css/survey_builder.css"/>
<% end %>
