<div class="container">
	<h2><%= @survey.title %></h2>
	<form id="take_survey" action="/surveys/<%= @survey.id %>/take" method="post">
		<ol>
			<% @survey.questions.each do |question| %>
			<li><%= question.question %></li>
				<ul>
					<% question.options.each do |option| %>
					<li><input type="radio" name="survey[<%= question.id %>]" value="<%= option.id%>"><%= option.text %></li>
					<% end %>
				</ul><br>
			<% end %>
		</ol>
		<input class='button' type="submit" value="Submit!">
	</form>
</div>


<% content_for :style do %>
  <link rel="stylesheet" href="/css/survey_taker.css"/>
<% end %>
